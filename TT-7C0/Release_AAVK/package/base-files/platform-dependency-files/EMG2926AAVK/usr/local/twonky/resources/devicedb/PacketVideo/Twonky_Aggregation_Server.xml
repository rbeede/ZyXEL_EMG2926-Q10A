<Server>
	<DeviceId>
		<DisplayName>Twonky Aggregation Server</DisplayName>
		<HttpRecognition>
			<HttpText>Aggregation, Twonky</HttpText>
		</HttpRecognition>
		<DeviceDescriptionRecognition>
			<DescriptionText>&lt;dlna:X_DLNAVIRT xmlns:dlna="urn:schemas-dlna-org:device-1-0"&gt;*&lt;/dlna:X_DLNAVIRT&gt;</DescriptionText>
		</DeviceDescriptionRecognition>
		<MappingUpdatePolicy>FIXPC</MappingUpdatePolicy>
	</DeviceId>
	<Adaptations>
		<DefaultView>advanceddefault</DefaultView>
		<DLNA>
			<Version>DLNA15</Version>
		</DLNA>
		<!--Flush entire cache if shares have been removed, since server does not event all affected containers -->
		<FlushForContainerIds>0$1,0$2,0$3</FlushForContainerIds>		
	</Adaptations>
	<DeviceQuirks>
		<Quirk>DATETIME</Quirk>
		<Quirk>AGGREGATION</Quirk>
	</DeviceQuirks>
</Server>
