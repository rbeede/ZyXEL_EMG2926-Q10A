<Client>
	<DeviceId>
		<DisplayName>PS3</DisplayName>
		<HttpRecognition>
			<HttpText>PLAYSTATION</HttpText>
		</HttpRecognition>
		<MappingUpdatePolicy>FIX</MappingUpdatePolicy>
	</DeviceId>
	<Capabilities>
		<Scaling>
			<Target>JPEGORG</Target>
		</Scaling>
		<VideoTranscoding>
			<Source>video/x-matroska</Source>
			<Source>video/quicktime</Source>
			<Source>video/x-ms-dvr</Source>
			<Source>video/x-ms-wtv</Source>
			<Source>video/flv</Source>
			<Source>video/webm</Source>
			<Target>MPEG</Target>
		</VideoTranscoding>
	</Capabilities>
	<Adaptations>
		<DLNA>
			<Version>DLNA10</Version>
		</DLNA>
		<HTTP>
			<HttpSetting>chunked</HttpSetting>
			<HttpSetting>1.0PROXYRESPONSE</HttpSetting>
		</HTTP>
		<MimeTranslations>
			<MimeTypeMapping>
				<In>video/mpeg2</In>
				<Out>video/mpeg</Out>
			</MimeTypeMapping>
			<MimeTypeMapping>
				<In>video/vnd.dlna.mpeg-tts</In>
				<Out>video/mpeg</Out>
			</MimeTypeMapping>
			<MimeTypeMapping>
				<In>video/x-msvideo</In>
				<Out>video/avi</Out>
			</MimeTypeMapping>
		</MimeTranslations>
	</Adaptations>
	<DeviceQuirks>
		<Quirk>DATETIME</Quirk>
		<Quirk>FILTER_BAD_CHARS</Quirk>
		<Quirk>FORCE_DURATION</Quirk>
	</DeviceQuirks>
</Client>
